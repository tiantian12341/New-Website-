    <link href="~/Content/font/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />

    @Html.AppendCssFile(
        "/Views/LR_Content/style/sp-common.min.css",
        "/Views/LR_Content/plugin/scroll/scroll.min.css",
        "/Views/LR_Content/style/sp-iframe-form.min.css",

        "/Views/LR_Content/plugin/wizard/wizard.min.css",
        "/Views/LR_Content/plugin/tree/sp-tree.min.css",
        "/Views/LR_Content/plugin/select/sp-select.min.css",
        "/Views/LR_Content/plugin/timeline/sp-timeline.min.css",
        "/Views/LR_Content/plugin/formselect/sp-formselect.min.css",
        "/Views/LR_Content/plugin/inputsearch/sp-isearch.min.css",
        "/Views/LR_Content/plugin/grid/jfgrid.min.css",
        "/Views/LR_Content/plugin/uploader/sp-uploader.min.css"
     )
    <script src="~/Content/jquery/jquery-1.10.2.min.js"></script>
    <script src="~/Content/jquery/jquery.md5.min.js"></script>
    <script src="~/Content/jquery/plugin/jqprint/jquery.jqprint-0.3.js"></script>
    <script src="~/Content/datepicker/WdatePicker.js"></script>
    <script src="~/Content/ueditor/ueditor.config.js"></script>
    <script src="~/Content/ueditor/ueditor.all.min.js"></script>
    <script src="~/Content/ueditor/lang/zh-cn/zh-cn.js"></script>

    <!--[if lt IE 9]>
      <script src="~/Content/bootstrap/html5shiv.min.js"></script>
      <script src="~/Content/bootstrap/respond.min.js"></script>
    <![endif]-->
    <script>
        function request(d) { for (var c = location.search.slice(1).split("&"), a = 0; a < c.length; a++) { var b = c[a].split("="); if (b[0] == d) if ("undefined" == unescape(decodeURIComponent(b[1]))) break; else return unescape(decodeURIComponent(b[1])) } return "" };
    </script>

</head>
<body class="@Sprann.Util.Net.Browser @Sprann.Util.WebHelper.GetUITheme()">
    <div id="sp_form_bg" class="sp-form-bg">
    </div>

    @RenderBody()
    @Html.AppendJsFile(
    "/Views/LR_Content/plugin/resize/resize.min.js",
    "/Views/LR_Content/plugin/mousewheel/mousewheel.min.js",
    "/Views/LR_Content/plugin/scroll/scroll.min.js",

    "/Views/LR_Content/script/sp-validator.min.js",
    "/Views/LR_Content/script/sp-form.min.js",
    "/Views/LR_Content/plugin/wizard/wizard.min.js",
    "/Views/LR_Content/plugin/tree/sp-tree.min.js",
    "/Views/LR_Content/plugin/select/sp-select.min.js",
    "/Views/LR_Content/plugin/timeline/sp-timeline.min.js",
    "/Views/LR_Content/plugin/formselect/sp-formselect.min.js",
    "/Views/LR_Content/plugin/inputsearch/sp-isearch.min.js",
    "/Views/LR_Content/plugin/uploader/sp-uploader.min.js",
    "/Views/LR_Content/plugin/grid/jfgrid.min.js"
    )

<script>
        $.spToken=$('@Html.AntiForgeryToken()').val();$(function(){$('#sp_form_bg').fadeOut();$('#form').spscroll();$('.splg').each(function(){var $this=$(this);top.sp.language.get($this.text(),function(text){$this.text(text)})});$('.sp-form-item-title').each(function(){var $this=$(this);var $font=$this.find('font');$font.remove();top.sp.language.get($this.text(),function(text){if($font.length>0){$this.html(text+'<font face="宋体">*</font>')}else{$this.text(text)}})});$('input[placeholder]').each(function(){var $this=$(this);var _text=$this.attr('placeholder');top.sp.language.get(_text,function(text){$this.attr('placeholder',text)})});if(!!window.bootstrap){bootstrap(jQuery,top.sp)}});
</script>

</body>
</html>

