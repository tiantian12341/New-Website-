    <!--[if lt IE 9]>
      <script src="~/Content/bootstrap/html5shiv.min.js"></script>
      <script src="~/Content/bootstrap/respond.min.js"></script>
    <![endif]-->
    <script>
        function request(d) { for (var c = location.search.slice(1).split("&"), a = 0; a < c.length; a++) { var b = c[a].split("="); if (b[0] == d) { if ("undefined" == unescape(decodeURIComponent(b[1]))) break; else return unescape(decodeURIComponent(b[1])) } } return "" };
    </script>
    @Html.SetCurrentUrl()
</head>
<body class="@Sprann.Util.Net.Browser @Sprann.Util.WebHelper.GetUITheme()">
    @RenderBody()

    @Html.AppendJsFile(

        "/Views/LR_Content/plugin/resize/resize.min.js",
        "/Views/LR_Content/plugin/mousewheel/mousewheel.min.js",
        "/Views/LR_Content/plugin/scroll/scroll.min.js",
        "/Views/LR_Content/script/sp-form.min.js",
        "/Views/LR_Content/script/sp-fileupload.min.js",
        "/Views/LR_Content/plugin/layout/sp-layout.min.js",
        "/Views/LR_Content/plugin/tree/sp-tree.min.js",
        "/Views/LR_Content/plugin/select/sp-select.min.js",
        "/Views/LR_Content/plugin/timeline/sp-timeline.min.js",
        "/Views/LR_Content/plugin/formselect/sp-formselect.min.js",
        "/Views/LR_Content/plugin/custmerquery/sp-custmerquery.min.js",
        "/Views/LR_Content/plugin/date/sp-datepicker.min.js",
        "/Views/LR_Content/script/sp-validator.min.js",
        "/Views/LR_Content/script/sp-authorize.min.js",
        "/Views/LR_Content/script/sp-excel.min.js",
        "/Views/LR_Content/script/sp-form.min.js",
        "/Views/LR_Content/script/sp-date.min.js",

        "/Views/LR_Content/plugin/grid/jfgrid.min.js"
        )
    <script>
        $.spToken = $('@Html.AntiForgeryToken()').val(); $(function () {
            $('#sp_layout').spLayout(); $('.splg').each(function () { var $this = $(this); top.sp.language.get($this.text(), function (text) { $this.text(text) }) }); $('.sp-form-item-title').each(function () { var $this = $(this); var $font = $this.find('font'); $font.remove(); top.sp.language.get($this.text(), function (text) { if ($font.length > 0) { $this.html(text + '<font face="宋体">*</font>') } else { $this.text(text) } }) }); $('input[placeholder]').each(function () { var $this = $(this); var _text = $this.attr('placeholder'); top.sp.language.get(_text, function (text) { $this.attr('placeholder', text) }) }); top.sp.httpAsync('GET', top.$.rootUrl + '/LR_SystemModule/Module/GetAuthorizeButtonColumnList', { url: spCurrentUrl }, function (data) { if (!!data) { spModuleButtonList = data.btns; spModuleColumnList = data.cols; spModule = data.module }; if (!!window.bootstrap) { bootstrap(window.jQuery, top.sp) } })
        });
    </script>
</body>

</html>

