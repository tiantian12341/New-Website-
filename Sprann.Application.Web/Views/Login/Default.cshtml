<body>
    <input id="errornum" type="hidden" value="@ViewBag.errornum" />

    <div class="d-flex flex-column flex-root">
        <div class="login login-1 login-singin-on d-flex flex-column flex-lg-row flex-column-fluid bg-white">
            <div class="login-aside d-flex flex-column flex-row-auto" style="background-color: #7EBFDB;">
                <div class="d-flex flex-column-auto flex-column pt-lg-40 pt-15">
                    <a href="#" class="text-center mb-15">
                        <img src="~/Content/images/sprann.png" alt="商标" class="h-70px">
                    </a>
                    <h3 class="font-weight-bolder text-center font-size-h4 font-size-h1-lg text-white">
                        <font style="vertical-align: inherit;">
                            <font style="vertical-align: inherit;">
                                用心创造价值
                            </font>
                        </font><br><font style="vertical-align: inherit;">@*<font style="vertical-align: inherit;">功能和可能性</font>*@</font>
                    </h3>
                </div>
                @*style="background-image: url(../Content/images/svg/payment.svg)"*@
                <div class="aside-img d-flex flex-row-fluid bgi-no-repeat bgi-position-y-bottom bgi-position-x-center">
                    <img src="~/Content/images/svg/payment.svg" style="width:100%;height:100%;" />
                </div>
            </div>

            <div class="login-content flex-row-fluid d-flex flex-column justify-content-center position-relative overflow-hidden p-7 mx-auto">
                <div class="d-flex flex-column-fluid flex-center">
                    <div class="login-form login-signin" style="display:block;">
                        <form class="form fv-plugins-bootstrap fv-plugins-framework noreg" novalidate="novalidate" id="kt_login_signin_form">
                            <div class="pb-13 pt-lg-0 pt-5">
                                <h3 class="font-weight-bolder text-dark font-size-h4 font-size-h1-lg">欢迎来到 Sprann</h3>
                                @*<span class="text-muted font-weight-bold font-size-h4">
                                    New Here?
                                    <a href="javascript:;" id="kt_login_signup" class="text-primary font-weight-bolder">Create an Account</a>
                                </span>*@
                            </div>
                            <div class="form-group fv-plugins-icon-container">
                                <label class="font-size-h6 font-weight-bolder text-dark">用户名</label>
                                <input class="form-control form-control-solid h-auto p-6 rounded-lg" type="text" name="username" autocomplete="off" id="sp_username">
                                <div class="fv-plugins-message-container  d-flex flex-row-reverse"><span class=" sp-login-error"></span>&nbsp;</div>
                            </div>
                            <div class="form-group fv-plugins-icon-container">
                                <div class="d-flex justify-content-between mt-n5">
                                    <label class="font-size-h6 font-weight-bolder text-dark pt-5">密码</label>
                                    @*<a href="javascript:;" class="text-primary font-size-h6 font-weight-bolder text-hover-primary pt-5" id="kt_login_forgot">忘记密码?</a>*@
                                </div>
                                <input class="form-control form-control-solid h-auto p-6 rounded-lg" type="password" name="password" autocomplete="off" id="sp_password">
                                <div class="fv-plugins-message-container"></div>
                            </div>

                            <div class="form-group fv-plugins-icon-container">
                                <div class="sp-login-input sp-login-reg">
                                    @*<img class="inp_icon" src="~/Content/images/Login/default_reg0.png" alt="">*@
                                    <i class="fa fa-plug inp_icon"></i>
                                    <input id="sp_verifycode_input" type="text" placeholder="验证码">
                                    <img class="code" id="sp_verifycode_img" src="~/Login/VerifyCode" alt="点击切换验证码" title="点击切换验证码" />
                                </div>
                            </div>
                            <div class="pb-lg-0 pb-5 mt-10 mt-lg-0">
                                <a id="sp_login_btn" class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-3">登录</a>
                                @*<button type="button" class="btn btn-light-primary font-weight-bolder px-8 py-4 my-3 font-size-lg">
                                        <span class="svg-icon svg-icon-md">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                                                <path d="M19.9895 10.1871C19.9895 9.36767 19.9214 8.76973 19.7742 8.14966H10.1992V11.848H15.8195C15.7062 12.7671 15.0943 14.1512 13.7346 15.0813L13.7155 15.2051L16.7429 17.4969L16.9527 17.5174C18.879 15.7789 19.9895 13.221 19.9895 10.1871Z" fill="#4285F4"></path>
                                                <path d="M10.1993 19.9313C12.9527 19.9313 15.2643 19.0454 16.9527 17.5174L13.7346 15.0813C12.8734 15.6682 11.7176 16.0779 10.1993 16.0779C7.50243 16.0779 5.21352 14.3395 4.39759 11.9366L4.27799 11.9466L1.13003 14.3273L1.08887 14.4391C2.76588 17.6945 6.21061 19.9313 10.1993 19.9313Z" fill="#34A853"></path>
                                                <path d="M4.39748 11.9366C4.18219 11.3166 4.05759 10.6521 4.05759 9.96565C4.05759 9.27909 4.18219 8.61473 4.38615 7.99466L4.38045 7.8626L1.19304 5.44366L1.08875 5.49214C0.397576 6.84305 0.000976562 8.36008 0.000976562 9.96565C0.000976562 11.5712 0.397576 13.0882 1.08875 14.4391L4.39748 11.9366Z" fill="#FBBC05"></path>
                                                <path d="M10.1993 3.85336C12.1142 3.85336 13.406 4.66168 14.1425 5.33717L17.0207 2.59107C15.253 0.985496 12.9527 0 10.1993 0C6.2106 0 2.76588 2.23672 1.08887 5.49214L4.38626 7.99466C5.21352 5.59183 7.50242 3.85336 10.1993 3.85336Z" fill="#EB4335"></path>
                                            </svg>
                                        </span>Sign in with Google
                                </button>*@
                            </div>
                            <input type="hidden"><div></div>
                        </form>
                    </div>
                </div>

                <div class="d-flex justify-content-lg-start justify-content-center align-items-end py-7 py-lg-0">
                    <a href="#" class="text-primary font-weight-bolder font-size-h5">条款</a>
                    <a href="#" class="text-primary ml-10 font-weight-bolder font-size-h5">计划</a>
                    <a href="#" class="text-primary ml-10 font-weight-bolder font-size-h5">联系我们</a>
                </div>
            </div>
        </div>
    </div>

 
    <script src="~/Content/jquery/jquery-1.10.2.min.js"></script>
    <script src="~/Content/jquery/jquery.md5.min.js"></script>

    <script>
        function request(d) { for (var c = location.search.slice(1).split("&"), a = 0; a < c.length; a++) { var b = c[a].split("="); if (b[0] == d) if ("undefined" == unescape(b[1])) break; else return unescape(decodeURIComponent(b[1])) } return "" };
        $.rootUrl = '@Url.Content("~")'.substr(0, '@Url.Content("~")'.length - 1);
        $.spToken = $('@Html.AntiForgeryToken()').val();
    </script>
    @Html.AppendJsFile("/Views/Login/Default/Index.min.js")
</body>

</html>
