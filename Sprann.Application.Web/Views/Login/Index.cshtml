<!DOCTYPE html>
<html>
<head>
    <meta name=”renderer” content=”webkit|ie-comp|ie-stand” />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="chrome=1,IE=edge">
    <meta name="keywords" content="注塑mes, 注塑行业mes, MES, 制造执行系统, 自动排程, APS" />
    <meta name="description" content="思普瑞云MES制造执行系统是国内首选的注塑行业MES，与自动排程APS工具配合使用，可提高注塑工厂车间管理效率30%，降低注塑机器人工操作和生产成本高达50%。" />
    <link rel="icon" href="~/logo32W.ico">
    <title>思普瑞云：MES制造执行系统 - 登录页面</title>
</head>
<body>
    @Html.AppendCssFile("/Views/Login/index.css")
    <input id="errornum" type="hidden" value="@ViewBag.errornum" />
    <div class="sp-layout-block top">
        <img src="~/Content/images/Login/logo.png" />
    </div>
    <div class="sp-layout-block middle">
        <div class="sp-layout-side left">
            <img src="~/Content/images/Login/bg_01.png" />
        </div>
        <div class="sp-layout-side center">
            <div class="sp-login-form">
                <div class="sp-tips" id="sp_tips"></div>

                <div class="sp-input-item ">
                    <label class="name-label"></label>
                    <input id="sp_username" type="text" placeholder="账户">
                </div>
                <div class="sp-input-item">
                    <label class="pwd-label"></label>
                    <input id="sp_password" type="password" placeholder="密码">
                </div>
                <div class="sp-input-item" style="display:none;">
                    <label class="code-label"></label>
                    <input id="sp_verifycode_input" maxlength="4" type="text" placeholder="图片验证码">
                    <div style="height: 36px;width: 100px;position: absolute;right: 0px;top: 0px;">
                        <img id="sp_verifycode_img" src="~/Login/VerifyCode" alt="点击切换验证码" title="点击切换验证码" />
                    </div>
                </div>
                <button id="sp_login_btn" type="button"><span>登录</span></button>
                <div class="sp-login-links">
                    <a href="#" onclick="alert('请联系管理员:')">忘记密码</a>
                </div>
                @*<div class="sp-version">当前版本 V1.0.0.0</div>*@
            </div>
        </div>
        <div class="sp-layout-side right">
            <img src="~/Content/images/Login/bg_03.png" />
        </div>
    </div>
    <div class="sp-layout-block bottom">思普瑞云(深圳)科技有限公司<br><a href="http://www.sprann.com" target="_blank" style="color:#828282;">官方网站：http://www.sprann.com</a></div>

    <script src="~/Content/jquery/jquery-1.10.2.min.js"></script>
    <script src="~/Content/jquery/jquery.md5.min.js"></script>
    <script>
        $.rootUrl = '@Url.Content("~")'.substr(0, '@Url.Content("~")'.length - 1);
        $.spToken = $('@Html.AntiForgeryToken()').val();
    </script>
    @Html.AppendJsFile("/Views/Login/index.js")
</body>
</html>

