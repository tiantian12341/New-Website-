@{
    ViewBag.Title = "清空日志";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="sp-form-wrap" id="form">
    <div class="col-xs-12 sp-form-item">
        <div class="sp-form-item-title">日志保留时间</div>
        <div id="keepTime">
            <ul>
                <li data-value="7">保留近一周</li>
                <li data-value="1">保留近一个月</li>
                <li data-value="3">保留近三个月</li>
                <li data-value="0">不保留，全部删除</li>
            </ul>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_SystemModule/Views/Log/Form.js")
