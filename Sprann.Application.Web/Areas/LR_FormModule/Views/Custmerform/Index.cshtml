@{
    ViewBag.Title = "表单设计";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="sp-layout sp-layout-left-center" id="sp_layout">
    <div class="sp-layout-left">
        <div class="sp-layout-wrap">
            <div class="sp-layout-title splg ">表单分类</div>
            <div class="sp-layout-body" id="sp_left_tree"></div>
        </div>
    </div>
    <div class="sp-layout-center">
        <div class="sp-layout-wrap">
            <div class="sp-layout-title">
                <span class="splg">模板数据</span> - <span id="titleinfo" class="splg">未选择分类</span>
            </div>
            <div class="sp-layout-tool">
                <div class="sp-layout-tool-left">
                    <div class="sp-layout-tool-item">
                        <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入模板名称" />
                    </div>
                    <div class="sp-layout-tool-item">
                        <a id="btn_Search" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;<span class="splg">查询</span></a>
                    </div>
                </div>
                <div class="sp-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="sp_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class=" btn-group btn-group-sm" sp-authorize="yes">
                        <a id="sp_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;<span class="splg">新增</span></a>
                        <a id="sp_edit" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;<span class="splg">编辑</span></a>
                        <a id="sp_delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;<span class="splg">删除</span></a>
                        <a id="sp_more" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-reorder"></i>&nbsp;<span class="splg">更多</span><span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu pull-right" aria-labelledby="sp-more">
                            <li id="sp_preview"><a><i></i>&nbsp;<span class="splg">预览表单</span></a></li>
                            <li id="sp_enabled"><a><i></i>&nbsp;<span class="splg">启用表单</span></a></li>
                            <li id="sp_disabled"><a><i></i>&nbsp;<span class="splg">禁用表单</span></a></li>
                            <li id="sp_history"><a><i></i>&nbsp;<span class="splg">查看历史记录</span></a></li>
                        </ul>
                    </div>
                    <div class=" btn-group btn-group-sm" sp-authorize="yes">
                        <a id="sp_category" class="btn btn-default"><i class="fa fa-tags"></i>&nbsp;<span class="splg">分类管理</span></a>
                    </div>
                </div>
            </div>
            <div class="sp-layout-body" id="gridtable"></div>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_FormModule/Views/Custmerform/Index.js")
