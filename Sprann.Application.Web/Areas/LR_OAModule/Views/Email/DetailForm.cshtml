@{
    ViewBag.Title = "详情";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="sp-form-wrap" id="form" style="padding:0">
    <div class="col-xs-12 sp-form-item">
        <div class="sp-form-item-title">主题</div>
        <input id="F_Subject" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-6 sp-form-item">
        <div class="sp-form-item-title">发件人</div>
        <input id="F_SenderName" type="text" class="form-control" readonly="readonly"/>
    </div>
    <div class="col-xs-6 sp-form-item">
        <div class="sp-form-item-title">日期</div>
        <input id="F_Date" type="text" class="form-control" readonly="readonly" />
    </div>
    <iframe id="F_frame" width="800px" height="500px" style="border:0;margin-top:20px ;padding:0 30px;"></iframe>
</div>
@Html.AppendJsFile("/Areas/LR_OAModule/Views/Email/DetailForm.js")
