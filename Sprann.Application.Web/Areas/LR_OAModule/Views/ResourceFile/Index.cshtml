@{
    ViewBag.Title = "文件管理";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div id="sp_layout" class="sp-layout sp-layout-left-center">
    <div class="sp-layout-left">
        <div class="sp-layout-wrap sp-layout-wrap-notitle" style="padding-top:10px;">
            <div class="sp-layout-body">
                <ul class="sp-left-list" id="sp_left_list">
                    <li data-value="allFile" class="splg active">所有文件</li>
                    <li data-value="allDocument" class="splg">文档</li>
                    <li data-value="allImage" class="splg">图片</li>
                    <li data-value="recycledFile" class="splg">回收站</li>
                    <li data-value="myShare" class="splg">我的共享</li>
                    <li data-value="othersShare" class="splg">他人共享</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="sp-layout-center">
        <div class="sp-layout-wrap">
            <div class="sp-layout-title">
                <div class="crumb-path">
                    <span class="back splg" data-folderid="back" style="display: none;cursor:pointer;text-decoration:underline">返回上一级</span>
                    <span class="path-item splg" data-folderid="allfile" style="cursor:pointer;text-decoration:underline">所有文件</span>
                </div>
            </div>
            <div class="sp-layout-tool">
                <div class="sp-layout-tool-left">
                    <div class="sp-layout-tool-item">
                        <div id="datesearch" class="datetime"></div>
                    </div>
                    <div class="sp-layout-tool-item">
                        <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" />
                    </div>
                    <div class="sp-layout-tool-item">
                        <a id="btn_Search" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;<span class="splg">查询</span></a>
                    </div>
                </div>
                <div class="sp-layout-tool-right">
                    <div class="btn-group btn-group-sm">
                        <a id="sp_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class="btn-group btn-group-sm">
                        <a id="sp-uploadify" class="btn btn-success"><i class="fa fa-upload"></i>&nbsp;<span class="splg">上传文件</span></a>
                    </div>
                    <div class="btn-group btn-group-sm">
                        <a id="sp-addfolder" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;<span class="splg">新建文件夹</span></a>
                    </div>
                    <div class="btn-group btn-group-sm">
                        <a id="sp-download" class="btn btn-default"><i class="fa fa-download"></i>&nbsp;<span class="splg">下载</span></a>
                        <a id="sp-preview" class="btn btn-default"><i class="fa fa-eye"></i>&nbsp;<span class="splg">预览</span></a>
                        <a id="sp-delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;<span class="splg">删除</span></a>
                        <a id="sp-share" class="btn btn-default"><i class="fa fa-share-alt"></i>&nbsp;<span class="splg">共享</span></a>
                        <a id="sp-cancelshare" class="btn btn-default" style="display: none;"><i class="fa fa-share-alt"></i>&nbsp;<span class="splg">取消共享</span></a>
                        <a id="sp_more" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-reorder"></i>&nbsp;<span class="splg">更多</span><span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li id="sp-rename"><a>&nbsp;<span class="splg">重命名</span></a></li>
                            <li id="sp-move"><a>&nbsp;<span class="splg">移动</span></a></li>
                        </ul>
                    </div>
                    <div class="btn-group btn-group-sm">
                        <a id="sp-restoreFile" style="display: none;" class="btn btn-default"><i class="fa fa-rotate-left"></i>&nbsp;<span class="splg">还原文件</span></a>
                        <a id="sp-thoroughDelete" style="display: none;" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;<span class="splg">彻底删除</span></a>
                        <a id="sp-emptyRecycled" style="display: none;" class="btn btn-default"><i class="fa fa-eraser"></i>&nbsp;<span class="splg">清空回收站</span></a>
                    </div>
                </div>
            </div>
            <div class="sp-layout-body" id="gridTable">
            </div>
        </div>
    </div>
</div>


@Html.AppendJsFile("/Areas/LR_OAModule/Views/ResourceFile/Index.js")
